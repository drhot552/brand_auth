  <script>
  function add_row() {
     var my_tbody = document.getElementById('dataTable');

     var row_index= dataTable.rows.length; // 하단에 추가
     var row = my_tbody.insertRow( my_tbody.rows.length ); // 하단에 추가

    // row.idName = "Brands" + row_index;
     var cell1 = row.insertCell(0);
     var cell2 = row.insertCell(1);
     var cell3 = row.insertCell(2);
     var cell4 = row.insertCell(3);
     var cell5 = row.insertCell(4);
     var cell6 = row.insertCell(5);
     var cell7 = row.insertCell(6);

     cell1.innerHTML = row_index;
     cell2.innerHTML = '<input type="text" class="form-control" name ="first_account" placeholder="Accounts(12length)">';
     cell3.innerHTML = '<input type="text" class="form-control" name ="owner_account" placeholder="Accounts(12length)">';
     cell4.innerHTML = '<input type="text" class="form-control" name = "brand_type" placeholder="Product Name">';
     cell5.innerHTML = '<input type="text" class="form-control" name = "product_name" placeholder="Product Name">';
     cell6.innerHTML = '<input type="text" class="form-control" name = "product_num" placeholder="Serial Num">';
     cell7.innerHTML = '<input type="date" class="form-control" name = "product_date" placeholder="date input">';

     document.getElementById('cnt').value = row_index;
   }
  function delete_row() {
    var dataTable = document.getElementById('dataTable');
    // var num = document.form;
    if (dataTable.rows.length < 2 || document.getElementById('cnt').value == 0) return;

    // my_tbody.deleteRow(0); // 상단부터 삭제
    dataTable.deleteRow( dataTable.rows.length-1 ); // 하단부터 삭제
    document.getElementById('cnt').value = dataTable.rows.length-1;
  }

  </script>

